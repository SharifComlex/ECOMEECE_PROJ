<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <section class="invoice">
                <div class="row mb-4">
                   
                    <div class="col-12">
                        <h5 class="text-left"><strong>Order Created</strong>Date: @Model.CreatedAt.ToString("dd-MM-yyyy hh:mm tt")</h5>
                    </div>
                </div>
                <div class="row invoice-info">
                    <div class="col-6">
                        <address><strong>Name: @Model.FirstName @Model.LastName</strong><br><strong>Email: @Model.Email</strong></address>
                    </div>
                    <div class="col-6">
                        <address><strong>Order Id: @Model.Id</strong><br><strong>Address</strong>@Model.Address </address>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product</th>
                                    <th>Qty</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>

                                        <td>
                                            <img id="imagePreview" src="@Config.Products@(item.CapImage)" style="height:100px; width:100px;" onerror="this.src='/Public/default-image.jpg';" />
                                            <br/>
                                            @if (item.IsCustom == true)
                                            {
                                                <img src="@Config.Products@(item.FrontBadge)" style="height:50px; width:50px;">
                                                <img src="@Config.Products@(item.BackBadge)" style="height:50px; width:50px;">
                                            }
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>£ @(item.Quantity *  item.UnitPrice)</td>

                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                @*<tr>
                                    <th>Cart Subtotal</th>
                                    <td>$215.00</td>
                                </tr>
                                <tr>
                                    <th>Shipping</th>
                                    <td><strong>$5.00</strong></td>
                                </tr>*@
                                 <tr class="order_total">
                                    <th colspan="3">Shipping Charges</th>
                                    <th><strong>£ @Model.ShippingCharges</strong></th>
                                </tr>
                                <tr class="order_total">
                                    <th colspan="2">Order Total</th>
                                    <th colspan="2" style="text-align:right"><strong>£ @Model.Total</strong></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                @*<div class="row d-print-none mt-2">
                    <div class="col-12 text-right"><a class="btn btn-primary" href="javascript:window.print();" target="_blank"><i class="fa fa-print"></i> Print</a></div>
                </div>*@
            </section>
        </div>
    </div>
</div>

