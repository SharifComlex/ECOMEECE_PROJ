
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_FrontEndLayout.cshtml";
}
    <div class="breadcrumb-area ptb-30 bg-gray">
        <div class="container">
            <div class="row">
                <div class="col">
                    <ul class="breadcrumb-list">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">Contact</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="main-content-wrap">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 col-sm-12">
                    <div class="contact-form mt-100">
                        <div class="contact-form-info">
                            <div class="contact-title">
                                <h3>TELL US YOUR PROJECT</h3>
                            </div>
                            <form id="contact-form" action="https://demo.hasthemes.com/t90-preview/t90-v2/email.php" method="POST">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="contact-page-form">
                                    <div class="contact-input">
                                        <div class="contact-inner">
                                            <input name="firstname"required type="text" placeholder="First Name *" id="first-name">
                                            <span class="text-danger" data-valmsg-for="Password"></span>
                                        </div>
                                        <div class="contact-inner">
                                            <input name="lastname" required type="text" placeholder="Last Name *" id="last-name">
                                            <span class="text-danger" data-valmsg-for="Password"></span>
                                        </div>
                                        <div class="contact-inner">
                                            <input type="email"required placeholder="Email *" id="email" name="email">
                                            <span class="text-danger" data-valmsg-for="Password"></span>
                                        </div>
                                        <div class="contact-inner">
                                            <input name="subject"required type="text" placeholder="Subject *" id="subject">
                                            <span class="text-danger" data-valmsg-for="Password"></span>
                                        </div>
                                        <div class="contact-inner contact-message">
                                            <textarea name="message"required placeholder="Message *"></textarea>
                                            <span class="text-danger" data-valmsg-for="Password"></span>
                                        </div>
                                    </div>
                                    <div class="contact-submit-btn">
                                        <button class="submit-btn" type="submit">Send </button>
                                        <p class="form-messege"></p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 col-sm-12">
                    <div class="contact-infor mt-100">
                        <div class="contact-title">
                            <h3>CONTACT US</h3>
                        </div>
                        <div class="contact-dec">
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ullam nam ex odio expedita, officia temporibus ipsum, placeat magni quibusdam sint, atque distinctio </p>
                        </div>
                        <div class="contact-address">
                            <ul>
                                <li><i class="fa fa-fax"> </i> Address : No 40 Baria Sreet 133/2 NewYork City</li>
                                <li><i class="fa fa-phone">&nbsp;</i> Infor@chairman.com</li>
                                <li><i class="fa fa-envelope-o">&nbsp;</i> 0(1234) 567 890</li>
                            </ul>
                        </div>
                        <div class="work-hours">
                            <h3><strong>Working hours</strong></h3>
                            <p><strong>Monday – Saturday</strong>: &nbsp;08AM – 22PM</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts{
    <script>
             $("#contact-form").submit(function (event) {
            event.preventDefault();

            $.ajax({
                type: "Post",
                url: '/Home/ContactUs',
                data: $("#contact-form").serialize()

            }).done(
                function (responce) {
                    debugger;
                    if (responce.status == true) {
                        
                        $.simplyToast("Thanks For Contacting Us", 'success');
                       $("#contact-form").find("input[type=text], textarea,input[type=email]").val("");
                    } else {
                        debugger;
                         for (var i = 0; i < responce.errors.length; i++) {
                            $("[data-valmsg-for='" + responce.errors[i].Key+"']").html(responce.errors[i].Errors[0]);
                        }
                        //Swal.fire(
                        //    {
                        //        icon: 'error',
                        //        title: 'Oops...',
                        //        text: responce.Message,
                        //    });

                    }
                })
                .debugger(function (XMLHttpRequest, textStatus, errorThrown) {
                    alert("F");
                });
        });
    </script>
    }