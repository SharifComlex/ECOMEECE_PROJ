    <script>
        $(document).ready(function () {
            var currentCrud = "";

            const navigationLinks = $('.navigation').find('li');

            navigationLinks.each((index, el) => {
                $(el).removeClass('navigation__active');

                const href = $(el).find("a").attr('href');
                const pattern = href[0] === '/' ? href.substr(1) : href;

                if (pattern === (window.location.pathname).substr(1)) {
                    if ($(el).parent().parent().hasClass("navigation__sub")) {
                        $(el).parent().parent().addClass("navigation__sub--active");
                        $(el).parent().parent().addClass("navigation__sub--toggled");
                    }
                    $(el).addClass('navigation__active');
                }
            }); 

            var dataTable = $("#data-table").DataTable({
                ajax: "@Config.BaseUrl/getList",
                autoWidth: !1,
                responsive: !0,
                lengthMenu: [[15, 30, 45, -1], ["15 Rows", "30 Rows", "45 Rows", "Everything"]],
                language: {
                    searchPlaceholder: "Search for records..."
                },
                sDom: '<"dataTables__top"flB<"dataTables_actions_refresh"><"dataTables_actions">>rt<"dataTables__bottom"ip><"clear">',
                buttons: [
                    { extend: "excelHtml5", title: "Export Data" },
                    { extend: "csvHtml5", title: "Export Data" },
                    { extend: "print", title: "Material Admin" }],
                "columns": columns,
                "createdRow": function (row, data, dataIndex) {
                    $(row).attr('data-grid-id', data.Id);
                },
                initComplete: function () {
                    $(".dataTables_actions_refresh").html('<a href="#" class="actions__item zwicon-refresh-double"></a>');
                    $(".dataTables_actions").html('<i class="zwicon-more-h" data-toggle="dropdown" /><div class="dropdown-menu dropdown-menu-right"><a data-table-action="print" class="dropdown-item">Print</a><a data-table-action="fullscreen" class="dropdown-item">Fullscreen</a><div class="dropdown-divider" /><div class="dropdown-header border-bottom-0 pt-0"><small>Download as</small></div><a data-table-action="excel" class="dropdown-item">Excel (.xlsx)</a><a data-table-action="csv" class="dropdown-item">CSV (.csv)</a></div>')
                }
            });

            $("body").on("click", "[data-table-action]", function (e) {
                e.preventDefault();

                var t = $(this).data("table-action");
                if ("excel" === t && $("#data-table_wrapper").find(".buttons-excel").click(), "csv" === t && $("#data-table_wrapper").find(".buttons-csv").click(), "print" === t && $("#data-table_wrapper").find(".buttons-print").click(), "fullscreen" === t) {
                    var a = $(this).closest(".card");
                    a.hasClass("card--fullscreen") ? (a.removeClass("card--fullscreen"), $("body").removeClass("data-table-toggled")) : (a.addClass("card--fullscreen"), $("body").addClass("data-table-toggled"));
                }
            });

            $("#btn-add").click(function () {
                var $btn = $(this);
                $btn.find("i").removeClass("fa-plus");
                $btn.find("i").addClass("fa-spinner");
                $btn.find("i").addClass("fa-spin");

                currentCrud = $btn.attr("data-model-crud");

                $.ajax({
                    cache: false,
                    type: "GET",
                    timeout: 5000,
                    url: "@Config.BaseUrl/create",
                    success: function (data) {
                        $(".modal-title").html($btn.attr("data-model-title"));
                        $(".modal-body").html(data);
                        $("#modal").modal("show");

                        $btn.find("i").addClass("fa-plus");
                        $btn.find("i").removeClass("fa-spinner");
                        $btn.find("i").removeClass("fa-spin");
                    },
                    error: function (ex) {
                        $("#modal").modal("show");
                        $btn.find("i").addClass("fa-plus");
                        $btn.find("i").removeClass("fa-spinner");
                        $btn.find("i").removeClass("fa-spin");
                    }
                });
            });

            $("body").on("click",".btn-edit",function () {
                var $btn = $(this);

                currentCrud = $btn.attr("data-model-crud");

                var id =  $btn.attr("data-id");
                $(".page-loader").show();

                $.ajax({
                    cache: false,
                    type: "GET",
                    timeout: 5000,
                    url: "@Config.BaseUrl/edit/" + id,
                    success: function (data) {
                        $(".modal-title").html($btn.attr("data-model-title"));
                        $(".modal-body").html(data);
                        $("#modal").modal("show");

                        $(".page-loader").hide();
                    },
                    error: function (ex) {
                        $("#modal").modal("show");
                        $(".page-loader").hide();
                    }
                });
            });

            $("body").on("click",".btn-remove",function () {
                var $btn = $(this);
                var id = $btn.attr("data-id");

                $(".page-loader").show();

                $.ajax({
                    cache: false,
                    type: "GET",
                    timeout: 5000,
                    url: "@Config.BaseUrl/remove/" + id,
                    success: function (response) {
                        if (response.status == true) {
                            dataTable.row($("[data-grid-id='" + id + "']")).remove().draw(false);
                        }

                        $(".page-loader").hide();
                    },
                    error: function (ex) {
                        $(".page-loader").hide();
                    }
                });
            });

            $("body").on("click",".btn-submit",function (e) {
                var url = $("#inputForm").attr("action");
                var formData = $("#inputForm").serialize();

                var $btn = $(this);
                $btn.find("i").removeClass("fa-plus");
                $btn.find("i").addClass("fa-spinner");
                $btn.find("i").addClass("fa-spin");
            
                $.ajax({
                    cache: false,
                    type: "post",
                    timeout: 5000,
                    url: url,
                    data: formData,
                    success: function (response) {
                        debugger
                        if (!response.status) {
                            $(".text-danger").html("");

                            for (var i = 0; i < response.errors.length; i++) {
                                $("[data-valmsg-for='" + response.errors[i].Key + "']").html(response.errors[i].Errors[0]);
                            }
                        } else if (response.status) {
                            if (currentCrud == "add") {
                                dataTable.row.add(response.data).draw(false);
                                dataTable.order([0, 'desc']).draw(false);
                                $("#modal").modal("hide");
                            } else if (currentCrud == "update") {
                                if ($("[data-grid-id='" + response.data.Id + "']").next().hasClass("child")) {
                                    $("[data-grid-id='" + response.data.Id + "']").next().remove();
                                }

                                dataTable.row($("[data-grid-id='" + response.data.Id + "']")).remove().draw(false);
                                dataTable.row.add(response.data).draw(false);

                                $("#modal").modal("hide");
                            }
                        }

                        $btn.find("i").addClass("fa-plus");
                        $btn.find("i").removeClass("fa-spinner");
                        $btn.find("i").removeClass("fa-spin");
                    },
                    error: function (ex) {
                        $("#modal").modal("show");
                        $("#btn-edit").html(btnText);
                    }
                });
            });

           // $('select').select2();

             $("body").on("click",".zwicon-refresh-double",function () {
                dataTable.ajax.reload();
            });
        });
    </script>
