@model ECap.Admin.Models.ChangePassword

<div class="content-wrapper">

    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Password</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Password</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-header">
                    <h3 class="card-title">Change Password</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <form id="roshan-form" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="email">Old Password *</label>
                            <input asp-for="OldPassword" type="text" placeholder="Password" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="email">Password *</label>
                            <input asp-for="NewPassword" type="text" placeholder="Password" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                    </form>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" form="roshan-form" class="btn btn-primary">Update</button>
                </div>
            </div>
            <!-- /.card -->
        </div>
    </section>

</div>


<!-- /.col (right) -->
